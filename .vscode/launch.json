{
  "configurations": [
    {
      "name": "C/C++: make all and debug",
      "type": "cppdbg",
      "request": "launch",
      // "program": "${fileDirname}/k2mult.x",
      // "args": [
      //   "data/socfb-Reed98.bin.k4",
      //   "data/socfb-Reed98.bin.k4", "-vn"
      // ],
      "program": "${fileDirname}/k2unary.x",
      // "args": [ "-o", "tmp/poli3.2", "-I", "tmp/poli3.ck2.p", "tmp/poli3.ck2"
      "args": [ "-o", "tmp/socfb-Reed98.2", "tmp/socfb-Reed98.k2"
      ],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "make all",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "Only launch gdb",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.x",
      "args": [
